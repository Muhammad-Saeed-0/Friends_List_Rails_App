<% if !@friends.empty? %>

  <h1>Friends List</h1>

  <div class="my-4 text-end">
    <%= link_to "New friend", new_friend_path, class: "btn btn-danger" %>
  </div>

  <table class="table table-striped table-hover text-center">
    <thead class="table-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Operations</th>
    </tr>
    </thead>
    <tbody>
    <tr>
    <% @friends.each do |friend| %>
      <td>
        <%= friend.first_name %>
        <%= friend.last_name %>
      </td>
      <td><%= friend.phone %></td>

      <td>
        <%= link_to "Show", friend, class:"btn btn-dark"%> |  <%= link_to "Update", edit_friend_path(friend), class:"btn btn-dark" %> |
        <div style="display: inline-block">
          <%= button_to 'Destroy', friend, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class:"btn btn-dark"%>
        </div>
      </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  <h1>You have not friends yet</h1><br>
  <div class="my-4 mx-5 text-left">
    <%= link_to "New friend", new_friend_path, class: "btn btn-danger w-25" %>
  </div>
<% end %>